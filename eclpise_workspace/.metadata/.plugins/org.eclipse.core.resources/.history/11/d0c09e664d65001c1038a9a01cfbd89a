package pers.chh3213.classLearn;

public class ClassTest {
	public static void main(String[] args) {
		Student stu = new Student();
		Teacher tea = new Teacher();
		stu.name = "John";
		stu.age = 10;
		stu.major="math";
		stu.interests="play tennis";
		stu.say();
		tea.age=45;
		tea.course="chinese";
		tea.name="Tom";
	}

}


class Student{
	int age; //声明私有变量age
	String name;
	String major;
	String interests;
	public void say() {//声明方法showAge()
		System.out.println("name:"+"\t"+name);
		System.out.println("age:"+"\t"+age);
		System.out.println("major:"+"\t"+major);
		System.out.println("interests:"+"\t"+interests);
	}
}
class Teacher{
	int age; //声明私有变量age
	int teach_age; //声明私有变量age
	String name;
	String course;
	String interests;
	public void say() {//声明方法showAge()
		System.out.println("name:"+"\t"+name);
		System.out.println("age:"+"\t"+age);
		System.out.println("teach_age:"+"\t"+teach_age);
		System.out.println("course:"+"\t"+course);
	}

}